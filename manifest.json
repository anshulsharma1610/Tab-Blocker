{
  "manifest_version": 3,
  "name": "Tab Blocker",
  "version": "3.0",
  "description": "Blocks specific sites from opening new tabs.",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Block this site from opening new tabs"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "block.png"
  }
}
